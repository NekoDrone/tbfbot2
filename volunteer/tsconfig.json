{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES2022",
        "module": "CommonJS",
        "esModuleInterop": true,
        "strict": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationDir": "build",
        "allowImportingTsExtensions": true,
        "noImplicitAny": true
    },
    "include": ["src/**/*"]
}